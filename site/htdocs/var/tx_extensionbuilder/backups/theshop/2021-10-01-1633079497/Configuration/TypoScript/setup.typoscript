plugin.tx_theshop_theshop {
    view {
        templateRootPaths.0 = EXT:theshop/Resources/Private/Templates/
        templateRootPaths.1 = {$plugin.tx_theshop_theshop.view.templateRootPath}
        partialRootPaths.0 = EXT:theshop/Resources/Private/Partials/
        partialRootPaths.1 = {$plugin.tx_theshop_theshop.view.partialRootPath}
        layoutRootPaths.0 = EXT:theshop/Resources/Private/Layouts/
        layoutRootPaths.1 = {$plugin.tx_theshop_theshop.view.layoutRootPath}
    }
    persistence {
        storagePid = {$plugin.tx_theshop_theshop.persistence.storagePid}
        #recursive = 1
    }
    features {
        #skipDefaultArguments = 1
        # if set to 1, the enable fields are ignored in BE context
        ignoreAllEnableFieldsInBe = 0
        # Should be on by default, but can be disabled if all action in the plugin are uncached
        requireCHashArgumentForActionArguments = 1
    }
    mvc {
        #callDefaultActionIfActionCantBeResolved = 1
    }
}

# these classes are only used in auto-generated templates
plugin.tx_theshop._CSS_DEFAULT_STYLE (
    textarea.f3-form-error {
        background-color:#FF9F9F;
        border: 1px #FF0000 solid;
    }

    input.f3-form-error {
        background-color:#FF9F9F;
        border: 1px #FF0000 solid;
    }

    .tx-theshop table {
        border-collapse:separate;
        border-spacing:10px;
    }

    .tx-theshop table th {
        font-weight:bold;
    }

    .tx-theshop table td {
        vertical-align:top;
    }

    .typo3-messages .message-error {
        color:red;
    }

    .typo3-messages .message-ok {
        color:green;
    }
)

# Module configuration
module.tx_theshop_web_theshoptheshop {
    persistence {
        storagePid = {$module.tx_theshop_theshop.persistence.storagePid}
    }
    view {
        templateRootPaths.0 = EXT:theshop/Resources/Private/Backend/Templates/
        templateRootPaths.1 = {$module.tx_theshop_theshop.view.templateRootPath}
        partialRootPaths.0 = EXT:theshop/Resources/Private/Backend/Partials/
        partialRootPaths.1 = {$module.tx_theshop_theshop.view.partialRootPath}
        layoutRootPaths.0 = EXT:theshop/Resources/Private/Backend/Layouts/
        layoutRootPaths.1 = {$module.tx_theshop_theshop.view.layoutRootPath}
    }
}
